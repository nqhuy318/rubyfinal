<% provide(:title, 'Post project') %>
<h1>Post new Project</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_tag(works_path, :method => 'POST') do %>

          <%= label_tag 'name' %>
          <%= text_field_tag 'name' %>

          <%= label_tag 'category_ids',"Skill Require" %>
          <br>
          <% Category.all.each do |category| %>
            <%= category.name %>
            <%= check_box_tag 'category_ids[]', category.id, false, class: 'form-control' %>
            <% end %>

            <%= label_tag 'description' %>
            <%= text_area_tag 'description' %>

            <%= label_tag 'price' %>
            <%= number_field_tag 'price' %>
            <%= submit_tag "Submit work", class: "btn btn-primary" %>
            <% end %>
        </div>
    </div>