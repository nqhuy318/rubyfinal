<% provide(:title, 'List of projects') %>
<% unless @works.nil? %>
  <h1>List of projects</h1>
  <table class="table table-border table-hover">
      <thead>
          <tr>
              <th>ID</th>
              <th>Project's name</th> 
              <th>Customer</th>
              <th>Description</th>
              <th>Price</th>
              <th>Options</th>
          </tr>
      </thead>
      <tbody>
          <% @works.each do |work|  %>
            <tr>
                <td><%= work.id %></td>
                <td><%= work.name %></td>
                <td><%= work.user_id %></td>
                <td><%= work.description %></td>
                <td><%= work.price %></td>
                <td>
                    <%=  link_to 'Show', new_work_path, class: 'btn btn-primary' %>
                      <%=  link_to 'Edit', edit_work_path(work), class: 'btn btn-warning' %>
                        <%=  link_to 'Delete',  work, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
                    </td>
                </tr>
              <% end %>
          </tbody>
      </table>
    <% end %>