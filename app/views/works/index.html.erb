<% provide(:title, 'List of projects') %>
<h1>List of projects</h1>
<style>
table, th, td {
    border: 1px solid black;
}
</style>

<ul class="works">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
  <table style="width:100%">
	<thead>
  		<tr>
    		<th>id</th>
    		<th>Project's name</th> 
    		<th>Customer</th>
    		<th>Description</th>
    		<th>Price</th>
    		<th colspan="3">Options</th>
  		</tr>
	</thead>
	<tbody>
  		
    		<%= @works.each do |work|  %>
        <tr>
      			<td><%= work.id %></td>
      			<td><%= work.name %></td>
      			<td><%= work.user_id %></td>
      			<td><%= work.description %></td>
      			<td><%= work.price %></td>
            <td><%=  link_to '<button type="button">Show</button>'.html_safe, works_new_path %></td>
      			<td><%=  link_to '<button type="button">Edit</button>'.html_safe, '/works/@work.id/edit' %></td>
            <td><%=  link_to '<button type="button">Delete</button>'.html_safe, works_delete_path %></td>
        </tr>
    		<% end %>
  		
	</tbody>
  </table>
  </div>	
</div>
</ul>