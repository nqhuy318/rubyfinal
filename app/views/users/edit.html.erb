<% provide(:title, 'Edit profile') %>
<h1>Edit Project</h1>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_tag(users_path, :method => 'POST', :remote => true) do %>
          <%= render 'shared/error_messages' %>

          <%= label_tag :fullname %>
          <%= text_field_tag :fullname, @user.fullname %>

          <%= label_tag :email %>
          <%= email_field_tag :email, @user.email %>

          <%= label_tag :role_id, @user.role.name%>
          <div id="list"></div>

          <%= submit_tag "Create my account", class: "btn btn-primary" %>
          <% end %>
      </div>
  </div>
  <script>
  <% if @user.role.id == 1 %>
      $('#list').html("<%= j render 'users/list'  %> ");
  <% end %>
  </script>