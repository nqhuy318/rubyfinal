<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <%= link_to "Freelancer", root_path, id: "logo" %>
        <nav>
            <ul class="nav navbar-nav navbar-right">
                <% if logged_in? %>
                  <li><%= link_to current_user.username, user_path(current_user) %></li>
                  <li><% if current_user[:role_id] == 2 %>
                        <%= link_to "Your work", works_path %>
                      <% elsif current_user[:role_id] == 1  %>
                        <%= link_to "Search work", search_works_path %>
                      <%  end %></li>
                  <li class="dropdown">
                      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                          Account <b class="caret"></b>
                      </a>
                      <ul class="dropdown-menu">
                          <li><%= link_to "Profile", current_user %></li>
                          <li><%= link_to "Settings", '#' %></li>
                          <li class="divider"></li>
                          <li>
                              <%= link_to "Log out", logout_path, method: "delete" %>
                          </li>
                      </ul>
                  </li>
                <% else %>
                  <li><%= link_to "Sign Up",   '/signup' %></li>
                  <li><%= link_to "Log In",   '/login' %></li>
              </ul>
            <% end %>
        </nav>
    </div>
</header>